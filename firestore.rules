rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAdmin() {
      return request.auth != null && !request.auth.token.firebase.sign_in_provider.matches('anonymous');
    }
    
    function isParticipant() {
      return request.auth != null && request.auth.token.firebase.sign_in_provider == 'anonymous';
    }
    
    // Quiz collection - only admin can access
    match /quizzes/{quizId} {
      allow read, write: if isAdmin();
    }
    
    // Sessions collection
    match /sessions/{sessionId} {
      // Admin can do everything
      allow read, write: if isAdmin();
      // Participants can only read
      allow read: if isParticipant();
      
      // Participants subcollection
      match /participants/{participantId} {
        // Admin can do everything
        allow read, write: if isAdmin();
        // Participant can read all participants but only write their own document
        allow read: if isParticipant();
        allow create, update: if isParticipant() && request.auth.uid == participantId;
      }
      
      // Answers subcollection
      match /answers/{answerId} {
        // Admin can do everything
        allow read, write: if isAdmin();
        // Participants can only create and read their own answers
        allow create: if isParticipant();
        allow read: if isParticipant() && resource.data.participantId == request.auth.uid;
      }
    }
  }
} 
} 